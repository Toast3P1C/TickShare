<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tickshare">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.activities.RegisterActivity"></activity>
        <activity android:name="com.activities.UserLoginActivity"></activity>
        <activity android:name="com.activities.PlanYourTripActivity"></activity>
        <activity android:name="com.activities.OfferATripActivity"></activity>
        <activity android:name="com.activities.ShowTripsActivity"></activity>
        <activity android:name="com.activities.ShowSingleTripActivity"></activity>
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
    </application>

</manifest>